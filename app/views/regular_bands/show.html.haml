- if user_band_member?(@regular_band, current_user)
  = link_to "編集", edit_regular_band_path, class: "show-band-edit"

.uk-margin-auto.uk-width-2-3@m.uk-padding-small{'uk-grid': ''}
  .uk-padding-small.uk-width-1-2@m
    %img.show-band-picture{"src" => "http://www.acappellazone.com/fileadmin/user_upload/ACAPPELLAZONE/TOP_ACTS/Slixs/SLIXS-hagen-wolf-3_slider.jpg"}
  .uk-padding-small.uk-width-1-2@m
    %h2= @regular_band.name
    .uk-tile.uk-tile-muted.uk-padding-small.uk-margin-top ABOUT
    .uk-text.uk-padding-small= @regular_band.description
    .uk-tile.uk-tile-muted.uk-padding-small.uk-margin-top MEMBERS
    %ul.uk-list
      -6.times do |i| 
        %li= "dummy member #{i + 1}" 
      -@regular_band.band_members.each do |us|
        %li= us.name
    .uk-tile.uk-tile-muted.uk-padding-small.uk-margin-top LEADER
    .uk-text-small.uk-padding-small バンマス
    .uk-tile.uk-tile-muted.uk-padding-small.uk-margin-top PA
    .uk-text-small.uk-padding-small PA







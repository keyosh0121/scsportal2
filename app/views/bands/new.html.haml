.flex-center
  = form_for @band do |f|
    %legend.uk-legend.form-title.flex-center 正規バンド登録
    .field
      = f.label :バンド名, class: "field-label"
      .uk-inline
        %span.uk-form-icon.uk-form-icon-flip{"uk-icon" => "icon: user"}
        = f.text_field :name, autofocus: true, class: "uk-input field-input"
    .field
      = f.label :結成年, class: "field-label"
      .uk-inline
        %span.uk-form-icon.uk-form-icon-flip{"uk-icon" => "icon: calendar"}
        = f.text_field :year, autocomplete: "email", class: "uk-input field-input"
    .field
      = f.label :バンドの説明, class: "field-label"
      .uk-inline
        %span.uk-form-icon.uk-form-icon-flip{"uk-icon" => "icon: lock"}
        = f.text_field :description, autocomplete: "off", class: "uk-input field-input"
    .field
      = f.label :Webページ, class: "field-label"
      .uk-inline
        %span.uk-form-icon.uk-form-icon-flip{"uk-icon" => "icon: world"}
        = f.password_field :web_url, autocomplete: "off", class: "uk-input field-input"
    .field
      = f.label :バンドマスター, class: "field-label"
      .uk-inline
        %span.uk-form-icon.uk-form-icon-flip{"uk-icon" => "icon: user"}
        = f.text_field :master_id, class: "uk-input field-input"
    .field
      = f.label :PA, class: "field-label"
      .uk-inline
        %span.uk-form-icon.uk-form-icon-flip{"uk-icon" => "icon: user"}
        = f.text_field :pa_id, class: "uk-input field-input"
    .field
      %label.field-label メンバーを追加
      .uk-inline
        %input.uk-input.field-input#user-search-field{placeholder: "追加したいユーザー名を入力してください", type: "text", name: "keyword"}
    .actions.flex-center
      = f.submit "登録", class: "uk-button uk-button-primary form-button"

%h2 新規登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    .field-label
      = f.label :名前
    .field-input
      = f.text_field :name, autofocus: true
  .field
    .field-label
      = f.label :メール
    .field-input
      = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    .field-label
      = f.label :パスワード
      - if @minimum_password_length
        %em
          (最低#{@minimum_password_length}文字)
    .field-input
      = f.password_field :password, autocomplete: "off"
  .field
    .field-label
      = f.label :パスワード確認
    .field-input
      = f.password_field :password_confirmation, autocomplete: "off"
  .field
    .field-label
      = f.label :入会年度
    .field-input
      = f.text_field :year, autofocus: true
  .field
    .field-label
      = f.label :大学
    .field-input
      = f.text_field :uni, autofocus: true
  .field
    .field-label
      =f.label :セクション
    .field-input
      =f.select(:section_id) do
        -[["舞台監督",1],["音響",2]].each do |c|
          = content_tag(:option, c.first, value: c.last)
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
